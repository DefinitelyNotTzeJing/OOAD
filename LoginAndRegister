import java.util.Scanner;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileWriter;
import java.io.IOException;

public class LoginAndRegister 
{
    
    Scanner loginInputScanner = new Scanner(System.in);
    Scanner registerInputScanner = new Scanner(System.in);

    public String usernameInput;
    public String passwordInput;
    private String username;
    private String password;
    private String email;
    private String contactNumber;
    private String gender;

    //login method
    public boolean clientLogin() throws FileNotFoundException
    {
        System.out.print("Please enter your username: ");
        usernameInput = loginInputScanner.nextLine();

        System.out.print("Please enter your password: ");
        passwordInput = loginInputScanner.nextLine();

        //read user textfile for existing username and password
        File loginFile = new File(usernameInput + ".txt");
        try
        {
            Scanner reader = new Scanner(loginFile);
            reader.close();
        } catch(IOException e)
        {
            System.out.println("An error has occured");
            e.getMessage();
        }
        
        Scanner reader = new Scanner(loginFile);
        while(reader.hasNextLine()) 
        {
            String data = reader.nextLine();
            String[] dataArray = data.split(",");
            reader.close();
            if (usernameInput == dataArray[0])
            {
                username = dataArray[0];
                password = dataArray[1];
                email = dataArray[2];
                contactNumber = dataArray[3];
                gender = dataArray[4];
                return true;
            }
        }
        reader.close();
        return false;
    }

    //register method
    public void clientRegister()
    {
        // Registration
        String username;
        String password;
        String email;
        String gender;
        String contactNumber;

        System.out.print("Username: ");
        username = registerInputScanner.nextLine();

        System.out.print("Password: ");
        password = registerInputScanner.nextLine();

        System.out.print("Email: ");
        email = registerInputScanner.nextLine();

        System.out.print("Contact Number: ");
        contactNumber = registerInputScanner.nextLine();

        do{
            System.out.print("Gender (M/F) : ");
            gender = registerInputScanner.nextLine();
            gender = gender.toUpperCase();
        }while (gender != "M" && gender != "F");
        
        try
        {
            FileWriter accCreate = new FileWriter("User.txt");
            accCreate.write(username + "," + password + "," + email + "," + contactNumber + "," + gender + "\n");
            accCreate.close();
            System.out.println("Account has been created successfully.\nAccount created: " + username);
        } catch (IOException e)
        {
            System.out.println("An error occured.");
            e.printStackTrace();
        }
    }
}
